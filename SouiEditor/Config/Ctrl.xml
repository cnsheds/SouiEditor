					</window>
					<window name="col2" clipClient="1">
						<ratingbar name="rating_score" starSkin="skin_star1" starNum="5" value="3.5" pos="10,16"  />
						<text name="txt_score" pos="10,36" font="adding:-5"  >8.5分</text>
